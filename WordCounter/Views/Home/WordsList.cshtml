@model IEnumerable<EntityContext.Word>
@{
    ViewData["Title"] = "View1";
}

<div id="searchresults">

    @*<div style=" text-align:center; width: 100%;
            height: 100px;
            margin-bottom: 5px;
            border: 1px solid black;
            border-radius: 5px">

        </div>*@
    <div>
        <div style="float:left"><label>You submited text</label> </div>
        <div style="float:right"><input type="button" value="Submited another text" class="button" onclick="location.href='@Url.Action("Index", "Home" )'" /></div>
    </div>
    <div>
        <textarea id="txtWord" name="txtWord" readonly="readonly"></textarea>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Word</th>
                <th scope="col">Count</th>
                <th scope="col">Stars</th>
            </tr>
        </thead>
        <tbody>
            @{ int rowNo = 0; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @(rowNo += 1)
                    </td>
                    <td>
                        @item.Word1
                    </td>
                    <td>
                        @item.Count
                    </td>
                    <td>
                        @BusinessLogic.Helper.GetStars(rowNo)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script type='text/javascript'>
    $(document).ready(function () {
        $("#first").hide();
        var text = $("#txtar").val();
        $("#txtWord").val(text);
    });
</script>
